/** pay.wxss **/
page{
  background: #F1F0F0;
}
.main-container{
  width: 100%;
  height: 400rpx;
}
.main-container .main{
  width: 100%;
  height: 250rpx;
  margin-top: 40rpx;
  padding-top: 80rpx;
  border-top: 2rpx solid #ddd;
  border-bottom: 2rpx solid #444;
}
.main-container .main text{
    display: block;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 40rpx;
}
.main-container .main .main-desc{
    color: #888;
    font-size: 28rpx;
}
.btn-container{
  width: 100%;
}
.btn-container button{
  width: 95%;
  margin: 30rpx auto;
}
.btn-container button.unionpay{
  background: transparent;
  color: #1AAD16;
  border: 2rpx solid #1AAD16;
}
.btn-container .wx-container{
    width: 100%;
    border-bottom: 2rpx solid #444;
}
.btn-container button.wx{
  background: #1AAD16;
  color: #fff;
  border: 2rpx solid #1AAD16;
}
.wx-icon-container{
    width: 100%;
    text-align: center;
}
.wx-icon-container image{
    display: block;
    width: 600rpx;
    height: 600rpx;
    margin: 40rpx auto;
}
.wx-icon-container .icon-desc{
    width: 100%;
    height: 60rpx;
    font-size: 30rpx;
    color: orangered;
}
.hide{
    display: none;
}