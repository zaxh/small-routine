/**index.wxss**/
page{
  background: #F1F0F0;
}
.img-container{
  width: 100%;
  height: 90rpx;
}
.img-container image{
  width: 100%;
  height: 90rpx;
}
.main-container{
  width: 100%;
}
.main-container .main-title{
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 20rpx;
  color: #EF9C04;
  font-size: 40rpx;
}
.main-container .main{
  width: 100%;
  min-height: 400rpx;
  background: #fff;
}
.main-container .main .list-item{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #EBEBEB;
  overflow: hidden;
}
.main-container .main .list-item:last-child{
  border: 0;
}
.main-container .main .list-item .name{
  display: inline-block;
  width: 30%;
  font-size: 36rpx;
  color: #1C3764;
  overflow: hidden;
}
.main-container .main .list-item .desc{
  display: inline-block;
  width: 70%;
  font-size: 32rpx;
  color: #888;
  overflow: hidden;
}
.main-container .main .list-item .desc .icon{
  display: inline-block;
  padding: 0 20rpx;
  font-weight: bold;
}
.btn-container{
  width: 100%;
  height: 300rpx;
}
.btn-container button{
  width: 95%;
  margin: 40rpx auto;
}
.btn-container button.addPerInfo{
  background: transparent;
  color: #1AAD16;
  border: 2rpx solid #1AAD16;
}
.btn-container button.subPayMon{
  background: #1AAD16;
  color: #fff;
  border: 2rpx solid #1AAD16;
}
.note-container{
  width: 100%;
  margin-top: 40rpx;
}
.note-container text{
  display: block;
  width: 100%;
  height: 40rpx;
  text-indent: 20rpx;
  font-size: 28rpx;
  color: #444;
}