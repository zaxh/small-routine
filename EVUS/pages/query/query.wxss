/* pages/query/query.wxss */
page{
  background: #F1F0F0;
}
.main-container{
  width: 100%;
  height: 500rpx;
}
.main-container .main-title{
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-indent: 20rpx;
  color: #EF9C04;
  font-size: 40rpx;
}
.main-container .main{
  width: 100%;
  height: 400rpx;
  background: #fff;
}
.main-container .title{
  display: block;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-indent: 20rpx;
}
.main-container .main-desc{
  display: block;
  width: 100%;
  line-height: 50rpx;
  font-size: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.btn-container{
  width: 100%;
  height: 300rpx;
}
.btn-container button{
  width: 95%;
  margin: 40rpx auto;
}
.btn-container button.query{
  background: transparent;
  color: #1AAD16;
  border: 2rpx solid #1AAD16;
}